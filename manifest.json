{
    "manifest_version": 2,
    "name": "Toloka Assistant",
    "description": "This is an experimental plugin that tracks your performance in MTurk. Please fill the initial and end surveys and uninstall it after a week.",
    "minimum_chrome_version": "24.0.1307.0",
    "version": "0.3.0",
    "homepage_url": "http://bit.ly/study-instructions",
    "icons": {
        "16": "icon_16.png",
        "128": "icon_128.png"
    },
    "page_action": {
      "default_title": "Toloka Assistant"
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Toloka Assistant"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "all_frames": true,
            "js": [
                "js/core.js",
                "js/fsm.js",
                "js/triggers.js",
                "js/front.js"
            ]
        }
    ],
    "web_accessible_resources": [
        "config/*",
        "js/*"
    ],
    "background": {
        "page": "background.html",
        "persistent": true
    },
    "permissions": [
        "tabs", "management", "storage", "<all_urls>", "contextMenus",
        "http://*/*",
        "https://*/*"
    ],
    "options_page": "dashboard.html",
    "content_security_policy": "script-src 'self' https://script.google.com; object-src 'self'"
}
